<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_rounded"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Habit"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textSize="22sp"
            android:textColor="@color/textPrimary" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingBottom="24dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <!-- Emoji Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tvEmojiPreview"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_emoji_preview"
                    android:gravity="center"
                    android:textSize="32sp"
                    android:visibility="gone"
                    android:layout_marginEnd="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmoji"
                    style="@style/Strive.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Emoji"
                    app:helperText="Enter a single emoji">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmoji"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLength="2"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Habit Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilHabitName"
                style="@style/Strive.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="Habit Name"
                app:counterEnabled="true"
                app:counterMaxLength="40">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etHabitName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:maxLength="40" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Unit Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilUnit"
                style="@style/Strive.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="Unit"
                app:helperText="e.g., ML, Minutes, Steps, Count">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUnit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:maxLength="20" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Daily Target -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDailyTarget"
                style="@style/Strive.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="Daily Target"
                app:helperText="Target amount per day">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDailyTarget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Default Increment -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDefaultIncrement"
                style="@style/Strive.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Default Increment"
                app:helperText="Amount to add with + button">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDefaultIncrement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Increment Suggestions -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupIncrements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:singleSelection="false" />

            <!-- Reminders Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enable reminders"
                    android:textSize="16sp"
                    android:textColor="@color/textPrimary"
                    android:fontFamily="sans-serif-medium" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchReminders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/switch_thumb_color"
                    app:trackTint="@color/switch_track_color" />

            </LinearLayout>

            <!-- Reminder Container -->
            <LinearLayout
                android:id="@+id/llReminderContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddReminder"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Add reminder"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <!-- Color Selection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Color"
                    android:textSize="16sp"
                    android:textColor="@color/textPrimary"
                    android:fontFamily="sans-serif-medium" />

                <View
                    android:id="@+id/viewSelectedColorPreview"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/circle_color_preview" />

            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupColors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:singleSelection="true"
                app:selectionRequired="true" />

            <!-- Add to Favorites -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Add to favorites?"
                    android:textSize="16sp"
                    android:textColor="@color/textPrimary"
                    android:fontFamily="sans-serif-medium" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchFavorites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/switch_thumb_color"
                    app:trackTint="@color/switch_track_color" />

            </LinearLayout>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="24dp"
                android:text="Add Habit"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:backgroundTint="#9C27B0"
                android:textColor="@android:color/white"
                android:enabled="true"
                app:cornerRadius="12dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>