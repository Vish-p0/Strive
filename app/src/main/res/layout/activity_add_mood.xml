<?xml version="1.0" encoding="utf-8"?>
<!-- Add Mood Screen -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:padding="@dimen/spacing_lg">

    <!-- Header -->
    <TextView
        style="@style/Strive.Text.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_xl"
        android:gravity="center"
        android:text="@string/add_mood" />

    <!-- Placeholder content -->
    <TextView
        style="@style/Strive.Text.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Mood entry interface will be implemented here\n\nThis would include:\n• Emoji grid selection\n• Optional note input\n• Save button"
        android:textAlignment="center" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Cancel Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        style="@style/Strive.Button.Outlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel" />

</LinearLayout>