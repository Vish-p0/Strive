<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebe4ef">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/bottom_nav_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:title="@string/settings_title"
                app:navigationIcon="@drawable/ic_back" />

            <TextView
                style="@style/Strive.Text.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:layout_marginBottom="@dimen/spacing_lg" />

            <!-- Mood Entry Notifications Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMoodNotifications"
                style="@style/Strive.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header with toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Strive.Text.Subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mood Entry Notifications"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                style="@style/Strive.Text.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Get reminded to log your mood" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchMoodNotifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!-- Expandable Settings (initially hidden) -->
                    <LinearLayout
                        android:id="@+id/layoutMoodSettings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp"
                            android:background="#E0E0E0" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">
                            <TextView
                                style="@style/Strive.Text.Body"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Start Time" />
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etMoodStart"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:clickable="true"
                                    android:inputType="none"
                                    android:text="09:00" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">
                            <TextView
                                style="@style/Strive.Text.Body"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Interval (minutes)" />
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:hint="Minutes">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etMoodInterval"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:text="120" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">
                            <TextView
                                style="@style/Strive.Text.Body"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="End Time" />
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etMoodEnd"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:clickable="true"
                                    android:inputType="none"
                                    android:text="21:00" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSaveMoodSchedule"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="Save"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:cornerRadius="12dp"
                            android:backgroundTint="#9C27B0" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Hydration Reminders Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHydrationNotifications"
                style="@style/Strive.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header with toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Strive.Text.Subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hydration Reminders"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                style="@style/Strive.Text.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Get reminded to drink water" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchHydrationNotifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!-- Expandable Settings (initially hidden) -->
                    <LinearLayout
                        android:id="@+id/layoutHydrationSettings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp"
                            android:background="#E0E0E0" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">
                            <TextView
                                style="@style/Strive.Text.Body"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Start Time" />
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etHydrationStart"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:clickable="true"
                                    android:inputType="none"
                                    android:text="08:00" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">
                            <TextView
                                style="@style/Strive.Text.Body"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Interval (minutes)" />
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:hint="Minutes">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etHydrationInterval"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:text="60" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">
                            <TextView
                                style="@style/Strive.Text.Body"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="End Time" />
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etHydrationEnd"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:clickable="true"
                                    android:inputType="none"
                                    android:text="22:00" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSaveHydrationSchedule"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="Save"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:cornerRadius="12dp"
                            android:backgroundTint="#9C27B0" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Data Section -->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackup"
                style="@style/Strive.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:text="Backup Data" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRestore"
                style="@style/Strive.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:text="Restore Data" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTestAlarm"
                style="@style/Strive.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:text="Test Alarm (1 min)" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteData"
                style="@style/Strive.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete All Data"
                android:textColor="@color/colorError" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        style="@style/Strive.BottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_nav_height"
        android:layout_gravity="bottom"
        app:menu="@menu/menu_bottom_nav" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>