<?xml version="1.0" encoding="utf-8"?>
<!-- Profile Screen -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebe4ef">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/bottom_nav_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg">

            <!-- Page Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_title"
                android:textSize="30sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="@dimen/spacing_lg" />

            <!-- Profile Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Strive.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/card_padding"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/ivAvatarEmoji"
                        android:layout_width="@dimen/avatar_size"
                        android:layout_height="@dimen/avatar_size"
                        android:layout_marginEnd="@dimen/spacing_lg"
                        android:background="@drawable/bg_bottom_nav"
                        android:gravity="center"
                        android:text="ðŸ«£"
                        android:textSize="@dimen/emoji_size"
                        android:contentDescription="@string/cd_avatar_emoji" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvName"
                            style="@style/Strive.Text.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User Name" />

                        <TextView
                            android:id="@+id/tvAgeGender"
                            style="@style/Strive.Text.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25, Female" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Actions -->
            <TextView
                style="@style/Strive.Text.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:text="Actions" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditProfile"
                style="@style/Strive.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:text="@string/edit_profile" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSettings"
                style="@style/Strive.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:text="@string/settings_title" />

            <!-- Settings button opens new Settings screen -->

            <!-- Widget Settings -->
            <TextView
                style="@style/Strive.Text.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:text="Widget" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWidgetSettings"
                style="@style/Strive.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        style="@style/Strive.Text.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:text="Home Screen Widget" />

                    <TextView
                        style="@style/Strive.Text.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:text="Choose which habit to display in your home screen widget" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_md">

                        <TextView
                            style="@style/Strive.Text.Body"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Selected Habit" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:hint="Choose habit">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/spinnerWidgetHabit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSaveWidget"
                        style="@style/Strive.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:text="Save Widget Settings" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sensor Settings -->
            <TextView
                style="@style/Strive.Text.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:text="Sensors" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSensorSettings"
                style="@style/Strive.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        style="@style/Strive.Text.Subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:text="Step Counter" />

                    <TextView
                        style="@style/Strive.Text.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:text="Automatically count steps using your device's step sensor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/Strive.Text.Body"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Enable step sensor" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchStepSensor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        style="@style/Strive.BottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_nav_height"
        android:layout_gravity="bottom"
        app:menu="@menu/menu_bottom_nav" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>