<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ebe4ef">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_lg"
        android:background="@color/surface">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/habit_detail_title"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:textColor="@color/textPrimary" />

        <ImageButton
            android:id="@+id/btnFavorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Toggle Favorite" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TOP SECTION: Enhanced Habit Overview -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Strive.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_lg"
                app:cardElevation="8dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/gradient_card_background">

                    <!-- Habit Icon & Name with Color Indicator -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/spacing_lg"
                        android:paddingBottom="@dimen/spacing_md">

                        <TextView
                            android:id="@+id/tvEmoji"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:text="ðŸ’§"
                            android:textSize="40sp"
                            android:gravity="center"
                            android:background="@drawable/emoji_circle_bg"
                            android:layout_marginEnd="@dimen/spacing_md" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvHabitTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Drink Water"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="26sp"
                                android:textColor="@color/textPrimary" />

                            <TextView
                                android:id="@+id/tvHabitType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Built-in habit"
                                android:textSize="13sp"
                                android:textColor="@color/textSecondary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Habit Color Indicator -->
                        <View
                            android:id="@+id/viewHabitColor"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:background="@drawable/circle_shape"
                            android:elevation="2dp" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginStart="@dimen/spacing_lg"
                        android:layout_marginEnd="@dimen/spacing_lg" />

                    <!-- Stats Row: Streak & Today's Progress Side by Side -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_lg">

                        <!-- Streak Display -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/stat_item_bg"
                            android:padding="@dimen/spacing_md">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”¥"
                                android:textSize="28sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvStreakNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7"
                                android:fontFamily="sans-serif-black"
                                android:textSize="32sp"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Day Streak"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="12sp"
                                android:textColor="@color/textSecondary"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <Space
                            android:layout_width="@dimen/spacing_md"
                            android:layout_height="match_parent" />

                        <!-- Today's Progress -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/stat_item_bg"
                            android:padding="@dimen/spacing_md">

                            <TextView
                                android:id="@+id/tvProgressPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="63%"
                                android:textSize="32sp"
                                android:textColor="@color/success"
                                android:fontFamily="sans-serif-black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Completed"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="12sp"
                                android:textColor="@color/textSecondary"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvProgressLarge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.25 L / 2.0 L"
                                android:textSize="14sp"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Progress Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/spacing_lg"
                        android:paddingEnd="@dimen/spacing_lg"
                        android:paddingBottom="@dimen/spacing_lg">

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:progress="63"
                            android:progressTint="@color/colorPrimary" />

                    </LinearLayout>

                    <!-- Quick Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Quick Add Buttons Row -->
                        <LinearLayout
                            android:id="@+id/llQuickButtons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginBottom="@dimen/spacing_md">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnQuick1"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="48dp"
                                android:text="+250"
                                android:textSize="14sp"
                                android:layout_marginEnd="@dimen/spacing_xs"
                                app:cornerRadius="24dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnQuick2"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="48dp"
                                android:text="+500"
                                android:textSize="14sp"
                                android:layout_marginEnd="@dimen/spacing_xs"
                                app:cornerRadius="24dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnQuick3"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="48dp"
                                android:text="+1000"
                                android:textSize="14sp"
                                app:cornerRadius="24dp" />

                        </LinearLayout>

                        <!-- Manual Entry Button (separate row) -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnManualEntry"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Manual Entry"
                            android:textColor="@android:color/white"
                            android:backgroundTint="@color/colorPrimary"
                            app:cornerRadius="24dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- MEDITATION TIMER (visible only for Meditate habit) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMeditationTimer"
                style="@style/Strive.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meditation Timer"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="18sp"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="@dimen/spacing_md" />

                    <!-- Duration Selection -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip5min"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 min"
                            android:checked="true" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip10min"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 min" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip15min"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 min" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip20min"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 min" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCustom"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Custom" />

                    </com.google.android.material.chip.ChipGroup>

                    <!-- Custom Duration Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCustomDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:hint="Custom duration (minutes)"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCustomDuration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Timer Display -->
                    <TextView
                        android:id="@+id/tvTimerDisplay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="05:00"
                        android:textSize="48sp"
                        android:fontFamily="monospace"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_marginVertical="@dimen/spacing_lg" />

                    <!-- Timer Controls -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnStartPause"
                            android:layout_width="120dp"
                            android:layout_height="56dp"
                            android:text="Start"
                            android:textColor="@android:color/white"
                            android:backgroundTint="@color/success"
                            android:layout_marginEnd="@dimen/spacing_md"
                            app:cornerRadius="28dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnStop"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="120dp"
                            android:layout_height="56dp"
                            android:text="Stop"
                            android:textColor="@color/danger"
                            app:strokeColor="@color/danger"
                            app:cornerRadius="28dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- CHART & TIMEFRAME SECTION -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Strive.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <!-- Chart Header with Timeframe Tabs -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/spacing_md">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Progress Chart"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="18sp"
                            android:textColor="@color/textPrimary"
                            android:layout_marginBottom="@dimen/spacing_sm" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupTimeframe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:singleSelection="true">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipDaily"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Daily"
                                android:checked="true" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipWeekly"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weekly" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipMonthly"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Monthly" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipYearly"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yearly" />

                        </com.google.android.material.chip.ChipGroup>

                    </LinearLayout>

                    <!-- Chart Area -->
                    <com.example.strive.views.HabitProgressChartView
                        android:id="@+id/chartView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:background="@color/surface" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_lg"
        android:background="@color/surface">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditHabit"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Edit Habit"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="@dimen/spacing_sm"
            app:strokeColor="@color/colorPrimary"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteHabit"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Delete Habit"
            android:textColor="@color/danger"
            android:layout_marginStart="@dimen/spacing_sm"
            app:strokeColor="@color/danger"
            app:cornerRadius="8dp" />

    </LinearLayout>

</LinearLayout>